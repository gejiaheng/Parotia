<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.melodie.parotia.ui.profile.ProfileViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/login_layout"
            layout="@layout/fragment_profile_login"
            android:visibility="@{viewModel.loggedIn ? View.GONE : View.VISIBLE}"
            tools:visibility="gone" />

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.loggedIn ? View.VISIBLE : View.GONE}"
            app:layoutDescription="@xml/scene_profile"
            tools:visibility="visible">

            <View
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="@dimen/toolbar_height_large"
                android:background="?android:colorBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.me.name}"
                android:textAppearance="?textAppearanceHeadline3"
                tools:text="Esther Howard" />

            <ImageView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/content_margin"
                android:src="@drawable/ic_round_settings_24"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintEnd_toEndOf="@id/toolbar"
                app:layout_constraintTop_toTopOf="@id/toolbar" />

            <ImageView
                android:id="@+id/stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/content_margin"
                android:src="@drawable/ic_round_insert_chart_outlined_24"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintEnd_toStartOf="@id/setting"
                app:layout_constraintTop_toTopOf="@id/toolbar" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/profile_avatar"
                android:layout_height="@dimen/profile_avatar"
                app:imageUrl="@{viewModel.me.profile_image.medium}"
                app:shapeAppearanceOverlay="@style/CircleImage" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="160dp"
                android:background="?attr/selectableItemBackground"
                android:drawableStart="@drawable/ic_outline_location_on_24"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:onClick="@{viewModel.toMap()}"
                android:paddingVertical="8dp"
                android:text="@{viewModel.me.location}"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                tools:text="United States" />

            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/content_margin"
                android:text="@{viewModel.me.bio}"
                android:textAppearance="?textAppearanceBody2"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/location"
                app:layout_constraintTop_toBottomOf="@id/location"
                tools:text="Download free, beautiful high-quality photos curated by Esther." />

            <ImageView
                android:id="@+id/twitter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{viewModel.toTwitter()}"
                android:src="@drawable/ic_twitter_inset"
                app:layout_constraintStart_toStartOf="@id/bio"
                app:layout_constraintTop_toBottomOf="@id/bio" />

            <ImageView
                android:id="@+id/ins_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{viewModel.toInstagram()}"
                android:src="@drawable/ic_instagram_inset"
                app:layout_constraintStart_toEndOf="@id/twitter_btn"
                app:layout_constraintTop_toTopOf="@id/twitter_btn" />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="avatar,ins_btn" />

